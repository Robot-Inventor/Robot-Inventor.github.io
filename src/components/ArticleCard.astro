---
import { getEntry } from "astro:content";
import { Picture } from "astro:assets";

interface Props {
    link: string;
    type?: "landscape" | "portrait";
}

if (!Astro.props.link.startsWith("/article/")) throw new Error("link attribute must start with /article/");

const slug = Astro.props.link
    .replace("/article/", "")
    .replace(/#[^/]*$/, "")
    .replace(/\/$/, "");

const defaultThumbnail: ImageMetadata = {
    width: 1920,
    height: 1080,
    format: "png",
    src: `/og/${slug}.png`
};

const targetArticle = await getEntry("article", slug);
if (!targetArticle) throw new Error("article not found");

const thumbnail = targetArticle.data.thumbnail || defaultThumbnail;
---

<article class={Astro.props.type || "landscape"}>
    <a href={Astro.props.link}>
        <Picture
            src={thumbnail}
            formats={["avif", "webp"]}
            width={Math.min(600, thumbnail.width)}
            alt="記事のサムネイル"
            class="thumbnail"
        />
        <div class="text_container">
            <div class="title">{targetArticle.data.title}</div>
            <div class="description">{targetArticle.data.description}</div>
        </div>
    </a>
</article>
<style>
    article {
        background: var(--secondary-background-color);
        border-radius: 0.25rem;
        overflow: hidden;
        box-shadow: 0.1rem 0.1rem 0.5rem rgb(0, 0, 0, 0.2);
        border: solid 0.1rem rgb(50, 50, 50, 0.1);
    }

    article.landscape {
        margin: 2rem 0;
    }

    article a {
        color: inherit;
        text-decoration: none;
    }

    article.landscape a {
        display: grid;
        grid-template-columns: 30% 70%;
    }

    .thumbnail {
        width: 100%;
        aspect-ratio: 16 / 9;
        object-fit: cover;
    }

    article.landscape .thumbnail {
        height: 100%;
        border-right: solid 0.1rem #e8e8e8;
    }

    @media (prefers-color-scheme: dark) {
        article.landscape .thumbnail {
            border-color: transparent;
        }
    }

    .text_container {
        padding: 0.5rem;
    }

    article.landscape .text_container {
        padding: 0.25rem 1rem;
    }

    .title {
        font-size: 1.2rem;
        font-weight: bold;
        text-align: justify;
        text-justify: inter-character;
        margin: 0.5rem 0;
        font-feature-settings: "palt";
    }

    .description {
        color: var(--middle-emphasis-color);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
