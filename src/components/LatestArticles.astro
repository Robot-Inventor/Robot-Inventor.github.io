---
import RecommendedArticles from "./RecommendedArticles.astro";
import type { CollectionEntry } from "astro:content";
import { getLatestArticles } from "../utils/getLatestArticles";

interface Props {
    currentPageSlug: CollectionEntry<"article">["slug"];
}

const NUMBER_OF_LATEST_ARTICLES = 5;
const latestArticles = await getLatestArticles(NUMBER_OF_LATEST_ARTICLES, [Astro.props.currentPageSlug]);
---

<RecommendedArticles header="最新記事" articles={latestArticles} />
